<%- include("../partials/header") %>

<div class = "container">
	<div class = "row">
		<div class = "col-md-12">
			<table class="table table-striped">
				<tr>
					<th>#</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>User Name</th>
					<th>Email</th>
					<th>Type</th>
					<th>Delete User</th>
				</tr>
				<% var i = 1 %>
				<% users.forEach(function(user){%>
					<% if(!(user._id.equals(currentUser._id))){ %> 
						<tr>
							<td>
								<span><%= i++ %></span>
							</td>
							<td> <%= user.firstName %></td>
							<td> <%= user.lastName %></td>
							<td> <%= user.username %></td>
							<td> <%= user.email %></td>
							<td>
								<% if(user.isAdmin){%>
									Admin
								<%}else{%> 
									User
								<%}%>
							</td>
							<td>
								<form action = "/users/<%= user._id %>?_method=delete" method = "POST">
									<button class = "btn btn-danger btn-md"> Delete</button>
								</form>
							</td>
						</tr>	
					<%}%>
				<%})%>
			</table>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>