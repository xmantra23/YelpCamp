<%- include("../partials/header") %>
<div class = "container">
	<h2 style = "text-align:center;">
		Add a campground.
	</h2>
	<div class = "row">
		<div class = "container-fluid" style="width:30%;margin: 30px auto">
			<form action = "/campgrounds" method = "POST">
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Campground Name" name = "name">	
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "number" placeholder = "price" name = "price"
						   min = "0.1" step = "0.1">	
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Image URL" name = "image">		
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Description" 
						   name = "description">
				</div>
				<div class = "form-group">
					<label for="location">Location</label>
					<input class = "form-control" type = "text" placeholder = "Yosemite National Park, CA"
						   name = "location" id = "location">
				</div>
				<div class = "form-group">
					<button class = "btn btn-block btn-primary">Submit</button>	
				</div>
			</form>	
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>