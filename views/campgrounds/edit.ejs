<%- include("../partials/header") %>
<div class = "container">
	<h2 style = "text-align:center;">
		Edit - <%= campground.name %>
	</h2>
	<div class = "row">
		<div class = "container-fluid" style="width:40%;margin: 30px auto">
			<form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST" 
				  enctype = "multipart/form-data">
				<div class = "form-group">
					<input class = "form-control" type = "text" value ="<%= campground.name %>"  
						   placeholder = "Campground Name (25 characters max)" name = "name" maxlength = "25" required>	
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "number" value ="<%= campground.price %>"  
						   name = "price" min = "0.1" step = "0.1" required>	
				</div>
				<div class = "form-group">
					<label for = 'image'>Image</label>
					<input type = "file" id = 'image' name = 'image' accept = "image/*"> 	
				</div>
				<div class = "form-group">
					<textarea class = "form-control" type = "text" placeholder = "campground details" 
							  name = "description" rows = "8" required><%= campground.description %></textarea>
				</div>
				<div class = "form-group">
					<label for="location">Location</label>
					<input class = "form-control" type = "text" value = "<%= campground.location %>"
						   name = "location" id = "location" required>
				</div>
				<div class = "form-group">
					<button class = "btn btn-block btn-primary">Submit</button>	
				</div>
			</form>	
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>